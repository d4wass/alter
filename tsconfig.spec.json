/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "module": "CommonJS",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "files": ["src/polyfills.ts", "src/setupJest.ts", "src/test.ts"],
  "include": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.mock.ts", "src/**/*.d.ts"]
}
